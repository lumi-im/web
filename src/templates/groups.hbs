{{# partial "content" }}
    <h2>Identity</h2>
    {{identity}}
    <h2>Groups</h2>
    <ul>
        {{#each groups}}
            <li>
                <a href="/groups/{{id}}/">{{name}} ({{id}})</a>
            </li>
        {{/each}}
    </ul>
    <h3>New Group</h3>
    <form action="/groups/" method="post">
        <ul>
            {{#each identities}}
            <li>
                <input type="checkbox" id="identities" name="members" value="{{this}}">
                <label for="identities">
                    {{this}}
                </label>
            </li>
            {{/each}}
        </ul>
        <input type="text" name="name">
        <input type="submit">
    </form>
{{/partial}}
{{> base}}
